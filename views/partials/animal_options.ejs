<% animals.forEach(function(animal) { %>
<div class="animal-option">
  <div class="animal-icon-container">
    <img class="animal-icon" src="<%= animal.imgPath %>" />
    <img
      id="<%= animal.name.toLowerCase() %>-selected"
      class="animal-selection-icon"
      src="/images/userCreation/animal_selected.png"
      data-animal="<%= animal.id %>"
    />
  </div>
  <div class="animal-icon-text"><%= animal.name %></div>
  <% if (isRejoin) { %>
  <button
    id="button-<%= animal.name.toLowerCase() %>"
    class="animal-button"
    onclick="selectRejoinAnimal('<%= animal.name %>', '<%= animal.imgPath %>');"
  ></button>
  <% } else { %>
  <button
    id="button-<%= animal.name.toLowerCase() %>"
    class="animal-button"
    onclick="selectAnimal('<%= animal.name %>', '<%= animal.id %>', '<%= animal.imgPath %>');"
  ></button>
  <% } %>
</div>
<% }); %>
