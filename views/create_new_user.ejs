<div id="create-new-user-screen">
  <div id="color-picker">
    <img src="/images/userCreation/color_picker.png" />
    <div id="color-options-container">
      <div id="option-red">
        <button
          id="button-red"
          class="color-button"
          onclick="selectColor('red', 1)"
        ></button>
        <img
          id="red-selected"
          class="color-selected"
          src="/images/userCreation/color_selected.png"
        />
      </div>

      <div id="option-yellow">
        <button
          id="button-yellow"
          class="color-button"
          onclick="selectColor('yellow', 2)"
        ></button>
        <img
          id="yellow-selected"
          class="color-selected"
          src="/images/userCreation/color_selected.png"
        />
      </div>

      <div id="option-green">
        <button
          id="button-green"
          class="color-button"
          onclick="selectColor('green', 3)"
        ></button>
        <img
          id="green-selected"
          class="color-selected"
          src="/images/userCreation/color_selected.png"
        />
      </div>

      <div id="option-blue">
        <button
          id="button-blue"
          class="color-button"
          onclick="selectColor('blue', 4)"
        ></button>
        <img
          id="blue-selected"
          class="color-selected"
          src="/images/userCreation/color_selected.png"
        />
      </div>
    </div>
  </div>
  <div id="user-creation-instructions">
    <img src="/images/userCreation/user_creation_instructions.png" />
    <button
      id="user-creation-instructions-button"
      onclick="showColorPicker()"
    ></button>
  </div>
  <div class="vertical-center">
    <div id="create-new-user-colors-container" class="colors-container"></div>

    <div id="create-new-user-animals-container" class="animals-container"></div>

    <div class="button-container">
      <button onclick="createUser()" class="temp-button">Create User</button>
    </div>
  </div>
</div>
